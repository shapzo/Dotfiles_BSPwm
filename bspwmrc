#!/usr/bin/sh
#=====================================================================================
#    '##::::'##:'##:::'##::::'########:::'######::'########::'##:::::'##:'##::::'##:  
#     ###::'###:. ##:'##::::: ##.... ##:'##... ##: ##.... ##: ##:'##: ##: ###::'###:  
#     ####'####::. ####:::::: ##:::: ##: ##:::..:: ##:::: ##: ##: ##: ##: ####'####:  
#     ## ### ##:::. ##::::::: ########::. ######:: ########:: ##: ##: ##: ## ### ##:  
#     ##. #: ##:::: ##::::::: ##.... ##::..... ##: ##.....::: ##: ##: ##: ##. #: ##:  
#     ##:.:: ##:::: ##::::::: ##:::: ##:'##::: ##: ##:::::::: ##: ##: ##: ##:.:: ##:  
#     ##:::: ##:::: ##::::::: ########::. ######:: ##::::::::. ###. ###:: ##:::: ##:  
#   ..:::::..:::::..::::::::........::::......:::..::::::::::...::...:::..:::::..::   
#=====================================================================================

sxhkd &
picom -b &         
xsetroot -cursor_name left_ptr &

$HOME/.config/polybar/launch.sh &

#set wallpaper
feh --bg-fill $HOME/Image/img.jpg

#monitor´s
bspc monitor -d         
#bspc monitor -d I II III IV V VI VII VIII IX
#bscp monitor -d 1 2 3 4 5 6 7 8 9

#Theme for bspwm -Custom-
bspc config normal_border_color "#63af5c"
bspc config active_border_color "#ffc100"
bspc config focused_border_color "#00ffd8"
bspc config presel_feedback_color "#994a7c"

#Gaps
bspc config border_width         2.5
bspc config window_gap           5

SPACES=$(bspc query -D)
for SPACE in $SPACES
do
  bspc config -d ${SPACE} window_gap      8
  bspc config -d ${SPACE} top_padding     1
  bspc config -d ${SPACE} bottom_padding  5
  bspc config -d ${SPACE} left_padding    8
  bspc config -d ${SPACE} right_padding   8
done

bspc config automatic_scheme      spiral
bspc config split_ratio           0.50
bspc config borderless_monocle    true
bspc config gapless_monocle       false  
bspc config single_monocle        true
bspc config focus_follows_pointer true
bspc config focused_frame_opacity 0.05
bspc config normal_frame_opacity  0.9
bspc config border_radius         15.0

# Rules
#bscp rule -a polybar manage=off
#bscp rule -a firefoxdeveloperedition Desktop='^2'
#bscp rule -a Spotify Desktop='^5'
#bscp rule -a Microsoft Teams - Preview Desktop='^6'

#Enable touchpad gestures       
xinput set-prop "SynPS/2 Synaptics TouchPad" "libinput Tapping Enabled" 1
xinput set-prop "SynPS/2 Synaptics TouchPad" "libinput Natural Scrolling Enabled" 1

